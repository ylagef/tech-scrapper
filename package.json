{
  "name": "tech-scrapper",
  "version": "1.0.0",
  "description": "Tech scrapper",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node16 --external:./node_modules/* --outfile=dist/index.js --loader:.ts=ts",
    "start": "rm -f log/*.log && npm run build && forever start --watchDirectory=./src ./src/forever/config.json",
    "stop-all": "forever stopall",
    "stop": "forever stop tech-scrapper",
    "forever-logs": "forever logs 0 -f",
    "logs": "tail -f log/out.log",
    "errors": "tail -f log/err.log",
    "restart": "npm run stop && npm run start",
    "start-logs": "npm run start && npm run logs",
    "clear-screenshots": "rm screenshots/*.png && rm -rf screenshots/full/*.png",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ylagef/tech-scrapper.git"
  },
  "author": "Yeray Lage",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ylagef/tech-scrapper/issues"
  },
  "homepage": "https://github.com/ylagef/tech-scrapper#readme",
  "dependencies": {
    "dotenv": "^10.0.0",
    "esbuild": "^0.14.38",
    "forever": "^4.0.1",
    "google-spreadsheet": "^3.2.0",
    "md5-nodejs": "^1.0.3",
    "node-color-log": "^7.0.0",
    "node-telegram-bot-api": "^0.54.0",
    "puppeteer": "^13.6.0",
    "puppeteer-extra": "^3.2.3",
    "puppeteer-extra-plugin-adblocker": "^2.12.0",
    "puppeteer-extra-plugin-stealth": "^2.9.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/google-spreadsheet": "^3.2.1",
    "@types/node": "^17.0.25",
    "@types/node-telegram-bot-api": "^0.56.2",
    "@types/puppeteer": "^5.4.5",
    "standard": "^16.0.4"
  },
  "eslintConfig": {
    "extends": "standard"
  }
}
